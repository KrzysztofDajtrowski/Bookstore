    ViewBag.Title = "Logowanie";
    Layout = "~/Views/Shared/_LayoutUnlogged.cshtml";
}

<h2>Logowanie</h2>


@using (Html.BeginForm())
{
    <h4>Podaj swoje dane</h4>
    <hr />

    <div class="form-group">
        @Html.Label("Nazwa użytkownika:", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.Editor("Login", new { htmlAttributes = new { @class = "form-control" } })
